$(document).ready(function() {
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      $('#floatingInput').on('blur', function() {
        const email = $(this).val();
        console.log('이메일:', email);

        if (!emailRegex.test(email)) {
          $('#emailFeedback').text('유효한 이메일 주소를 입력해주세요.');
          return;
        } 

        $.ajax({
          url: '/register/check-email',  // 요청을 보낼 URL
          method: 'POST',  // 요청 방식 (GET, POST 등)
          contentType: 'application/json',  // 전송할 데이터의 콘텐츠 타입
          data: JSON.stringify({ email: email }),  // 서버로 보낼 데이터
          success: function(response) {  // 요청이 성공하면 호출될 함수
            // response 객체를 통해 서버의 응답 데이터를 처리
            if (response.exists) {
              $('#emailFeedback').text('이 이메일은 이미 사용 중입니다.');
            } else {
              $('#emailFeedback').text('');
            }
          },
          error: function(error) {
            console.error('Error checking email:', error);
          }
        });
      });

      $('#floatingPassword').on('blur', function() {
        const email = $('#floatingInput').val();
        const password = $(this).val();
        console.log('비밀번호:', password);

        if (email.length === 0) {
          $('#emailFeedback').text('이메일을 먼저 입력해주세요.');
          $('#passwordFeedback').text('');
        } else{
          $('#emailFeedback').text('');
          
          // 비밀번호 유효성 검사
          if (password.length < 8) {
            $('#passwordFeedback').text('비밀번호는 최소 8자 이상이어야 합니다.');
          } else if (!/[A-Z]/.test(password)) {
            $('#passwordFeedback').text('비밀번호에는 대문자가 하나 이상 포함되어야 합니다.');
          } else if (!/[a-z]/.test(password)) {
            $('#passwordFeedback').text('비밀번호에는 소문자가 하나 이상 포함되어야 합니다.');
          } else if (!/[0-9]/.test(password)) {
            $('#passwordFeedback').text('비밀번호에는 숫자가 하나 이상 포함되어야 합니다.');
          } else if (!/[!@#$%^&*]/.test(password)) {
            $('#passwordFeedback').text('비밀번호에는 특수 문자가 하나 이상 포함되어야 합니다.');
          } else {
            $('#passwordFeedback').text('');
          }
        }
      });

      // 이메일 필드에 텍스트가 입력되면 이메일 필드의 메시지 초기화
      $('#floatingInput').on('input', function() {
        const password = $(this).val();
        $('#emailFeedback').text('');

        // 비밀번호 유효성 검사
        if (password.length < 8) {
            $('#passwordFeedback').text('비밀번호는 최소 8자 이상이어야 합니다.');
          } else if (!/[A-Z]/.test(password)) {
            $('#passwordFeedback').text('비밀번호에는 대문자가 하나 이상 포함되어야 합니다.');
          } else if (!/[a-z]/.test(password)) {
            $('#passwordFeedback').text('비밀번호에는 소문자가 하나 이상 포함되어야 합니다.');
          } else if (!/[0-9]/.test(password)) {
            $('#passwordFeedback').text('비밀번호에는 숫자가 하나 이상 포함되어야 합니다.');
          } else if (!/[!@#$%^&*]/.test(password)) {
            $('#passwordFeedback').text('비밀번호에는 특수 문자가 하나 이상 포함되어야 합니다.');
          } else {
            $('#passwordFeedback').text('');
          }
      });
    });
